<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FAF5F5"
    app:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profileIV"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_user_default"/>

        <ImageView
            android:id="@+id/onlineStatusIV"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/cricle_online"
            android:layout_alignBottom="@id/profileIV"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:layout_alignRight="@id/profileIV"/>


        <TextView
            android:id="@+id/nameTV"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your name"
            android:layout_marginStart="15dp"
            android:textSize="18sp"
            android:textColor="#6F6B6B"
            android:layout_toEndOf="@id/profileIV"
            android:layout_toRightOf="@id/profileIV"/>

        <TextView
            android:id="@+id/lastMessageTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Message"
            android:maxLines="2"
            android:textSize="16sp"
            android:textColor="#6F6B6B"
            android:layout_marginStart="15dp"
            android:layout_below="@id/nameTV"
            android:layout_toEndOf="@id/profileIV"
            android:layout_toRightOf="@id/profileIV"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>