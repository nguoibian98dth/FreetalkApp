<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_freetalk"
    tools:context=".IntroductionActivity">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="130dp"
        android:src="@mipmap/ic_launcher_foreground" />

    <TextView
    android:id="@+id/tv2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_below="@id/imgIcon"
    android:padding="5dp"
    android:text="FREETALK"
    android:textColor="#C4C0C0"
    android:textSize="40sp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/tv2"
        android:padding="5dp"
        android:text="Thế giới trong tầm tay bạn ♥"
        android:textColor="#C4C0C0"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/tv1"
        android:padding="5dp"
        android:text="Khám phá ngay"
        android:textColor="#C4C0C0"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_alignStart="@+id/tv2"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="253dp"
        android:text="Copyright by Khâu Đạt - Version 1.1.1b"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />


</RelativeLayout>